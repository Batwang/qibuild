"""QiBuild command line tool.
"""

import argparse
import qibuild

def main():
    parser = argparse.ArgumentParser()
    modules = qibuild.shell.main.action_modules_from_package("qibuild.actions")
    qibuild.shell.root_command_main("qibuild", parser, modules)

if __name__ == "__main__":
    main()
